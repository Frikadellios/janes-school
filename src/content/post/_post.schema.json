{
  "type": "object",
  "properties": {
    "metaTitle": {
      "type": "string",
      "maxLength": 60
    },
    "metaDescription": {
      "type": "string",
      "maxLength": 160
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "cover": {
      "type": "string"
    },
    "image": {
      "type": "object",
      "properties": {
        "src": {
          "type": "object",
          "properties": {
            "src": {
              "type": "string"
            },
            "width": {
              "type": "number"
            },
            "height": {
              "type": "number"
            },
            "format": {
              "type": "string",
              "enum": [
                "png",
                "jpg",
                "jpeg",
                "tiff",
                "webp",
                "gif",
                "svg",
                "avif"
              ]
            }
          },
          "required": [
            "src",
            "width",
            "height",
            "format"
          ],
          "additionalProperties": false
        },
        "alt": {
          "type": "string"
        }
      },
      "required": [
        "src",
        "alt"
      ],
      "additionalProperties": false
    },
    "category": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "collection": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "collection"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "slug": {
                "type": "string"
              },
              "collection": {
                "type": "string"
              }
            },
            "required": [
              "slug",
              "collection"
            ],
            "additionalProperties": false
          }
        ]
      }
    },
    "author": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "collection": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "collection"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "slug": {
                "type": "string"
              },
              "collection": {
                "type": "string"
              }
            },
            "required": [
              "slug",
              "collection"
            ],
            "additionalProperties": false
          }
        ]
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [
        "education"
      ]
    },
    "relatedPosts": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "collection": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "collection"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "slug": {
                "type": "string"
              },
              "collection": {
                "type": "string"
              }
            },
            "required": [
              "slug",
              "collection"
            ],
            "additionalProperties": false
          }
        ]
      }
    },
    "pubDate": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "string",
          "format": "date-time"
        }
      ]
    },
    "dateFormatted": {
      "type": "string"
    },
    "lang": {
      "type": "string",
      "enum": [
        "en",
        "uk",
        "ru"
      ]
    }
  },
  "required": [
    "title",
    "category",
    "author",
    "relatedPosts",
    "dateFormatted",
    "lang"
  ],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}