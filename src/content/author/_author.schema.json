{
  "type": "object",
  "properties": {
    "firstname": {
      "type": "string"
    },
    "lastname": {
      "type": "string"
    },
    "nikname": {
      "type": "string"
    },
    "apdi": {
      "type": "string"
    },
    "photo": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "thumbnail": {
          "type": "string"
        },
        "alt": {
          "type": "string",
          "default": "photo of APDI member"
        }
      },
      "required": ["url"],
      "additionalProperties": false
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "linkedin": {
      "type": "string",
      "format": "uri"
    },
    "twitter": {
      "type": "string",
      "format": "uri"
    },
    "instagram": {
      "type": "string",
      "format": "uri"
    },
    "facebook": {
      "type": "string",
      "format": "uri"
    },
    "lang": {
      "type": "string",
      "enum": ["en", "uk", "ru"]
    }
  },
  "required": ["firstname", "lastname", "photo", "email", "lang"],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}
