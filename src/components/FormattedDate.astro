---

interface Props {
  date: Date
  includeTime?: boolean
}

const { date, includeTime } = Astro.props
const locale = Astro.currentLocale || Intl.DateTimeFormat().resolvedOptions().locale
---
<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(locale, {
			year: "numeric",
			month: "short",
			day: "numeric",
			hour: includeTime ? "numeric" : undefined,
			minute: includeTime ? "numeric" : undefined,
		})
	}
</time>
