---
import I18NHeader from '@/components/layout/I18nHeaders.astro'
import { getLocalizedPathname, pathNameIsInLanguage } from '@/i18n/config'
import { defaultLang } from '@/i18n/ui'
import { siteConfig } from '@/site-config'
import '@/styles/globals.css'
import { ViewTransitions } from 'astro:transitions'

export interface Props {
	title: string
	description?: string
	ogImage?: string | undefined
	articleDate?: string | undefined
	lang?: string
}

const { title, description = siteConfig.description, ogImage, articleDate } = Astro.props

const socialImageURL = new URL(ogImage ? ogImage : './og-pink.webp', Astro.url).href

const titleSeparator = 'â€¢'

const siteTitle = `${title} ${titleSeparator} ${siteConfig.title}`

const canonicalPathname = pathNameIsInLanguage(Astro.url.pathname, defaultLang)
	? Astro.url.pathname
	: getLocalizedPathname(Astro.url.pathname, defaultLang)
const canonicalURL = new URL(canonicalPathname, Astro.site)
---

<!-- Global Metadata -->
<meta charset="UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
<meta name="generator" content={Astro.generator} />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<link rel="preload" href="/fonts/inter.woff2" as="font" type="font/woff2" crossorigin />

<!-- Font preloads -->
<link rel="preload" href="./src/assets/fonts/inter.woff2" as="font" type="font/woff2" crossorigin />

<!-- Alternate URLs -->

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<I18NHeader>
	<!-- Canonical URL -->

	<!-- Primary Meta Tags -->
	<title>{siteTitle}</title>

	<!-- SEO -->
	<meta name="title" content={siteTitle} />
	<meta name="description" content={description} />
	<meta name="author" content={siteConfig.author} />

	<!-- Open Graph / Facebook -->
	<meta property="og:type" content={articleDate ? 'article' : 'website'} />
	<meta property="og:url" content={Astro.url} />
	<meta property="og:title" content={title} />
	<meta property="og:description" content={description} />
	<meta property="og:image" content={socialImageURL} />
	{
		articleDate && (
			<>
				<meta property="article:author" content={siteConfig.author} />
				<meta property="article:published_time" content={articleDate} />
			</>
		)
	}

	<!-- Twitter -->
	<meta property="twitter:card" content="summary_large_image" />
	<meta property="twitter:url" content={Astro.url} />
	<meta property="twitter:title" content={title} />
	<meta property="twitter:description" content={description} />
	<meta property="twitter:image" content={socialImageURL} />

	<!-- RSS auto-discovery -->
	<link rel="alternate" type="application/rss+xml" title={siteConfig.title} href="/rss.xml" />

	<!-- Sitemap -->
	<link rel="sitemap" href="/sitemap-index.xml" />
	<meta name="robots" content="index, follow" />
	<meta name="googlebot" content="index, follow" />

	<!-- Sitemap -->
	<link rel="sitemap" href="/sitemap-index.xml" />

	<!-- RSS Feed -->
	<link rel="alternate" type="application/rss+xml" title={title} href={`${Astro.site}rss.xml`} />

	<!-- Global Scripts -->
	<script is:inline src="/js/theme.js"></script>
	<script is:inline src="/js/scroll.js"></script>
	<script is:inline src="/js/animate.js"></script>

	<!-- <ViewTransitions  /> -->

	<script>
		import type { TransitionBeforeSwapEvent } from 'astro:transitions/client'
		document.addEventListener('astro:before-swap', (e) =>
			[
				...(e as TransitionBeforeSwapEvent).newDocument.head.querySelectorAll(
					'link[as="font"]'
				)
			].forEach((link) => link.remove())
		)
	</script>

	<ViewTransitions />
</I18NHeader>
