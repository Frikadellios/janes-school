---
import { LOCALES, getLocalizedPathname } from '@/i18n/config'

const { pathname } = Astro.url

interface Props {
  key: string
}

const lang = Astro.params?.lang || 'uk'
---

<ul class="flex gap-1 w-min">
  {
    Object.keys(LOCALES).map((key) => (
      <li class="flex items-center text-white hover:fancy">
        {lang === key ? (
          <span class="fancy p-2 font-semibold text-sm">{key}</span>
        ) : (
          <a class="p-2 text-sm" href={getLocalizedPathname(pathname, key as "en" | "ru" | "uk")}>
            {key}
          </a>
        )}
      </li>
    ))
  }
</ul>
